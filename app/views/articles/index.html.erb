<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="digg_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title.capitalize %></td>
        <td><%= article.status.capitalize %></td>
        <td>
          <%= link_to article_path(article), class: "btn btn-mini" do %>
            <i class="icon-eye-open">View</i>
          <% end %>

          <%= link_to edit_article_path(article), class: "btn btn-mini" do %>
            <i class="icon-pencil">Edit</i>
          <% end %>

          <%= link_to article_path(article), class: "btn btn-mini", :method => :delete, :confirm => "Anda yakin ingin menghapus produk ini?"  do %>
            <i class="icon-remove">Delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>